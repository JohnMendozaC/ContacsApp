<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <ImageView
        android:id="@+id/imageGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@tools:sample/avatars"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_picture_customer" />

    <TextView
        android:id="@+id/textGender"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_item_contact"
        android:text="Mr Calvin Simmons"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageGender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageGender"
        app:layout_constraintTop_toTopOf="@+id/imageGender" />

</androidx.constraintlayout.widget.ConstraintLayout>