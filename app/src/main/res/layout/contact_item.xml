<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gender_icon"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle_picture_customer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_contact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_item_contact"
        android:text="Mr Calvin Simmons"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_contact"
        app:layout_constraintTop_toTopOf="@+id/image_contact" />

</androidx.constraintlayout.widget.ConstraintLayout>
