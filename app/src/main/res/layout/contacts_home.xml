<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_brown"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACTOS"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="italic"
            android:gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFilter"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Filtrar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/buttonSortBy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <ImageView
        android:id="@+id/filterIcon"
        android:layout_width="26dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:foregroundGravity="left"
        app:layout_constraintEnd_toEndOf="@+id/buttonFilter"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:srcCompat="@drawable/filter_icon" />

    <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonSortBy"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="ordenar"
    android:textColor="@color/black"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    app:layout_constraintStart_toEndOf="@+id/buttonFilter"
    app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/sortIcon"
        android:layout_width="26dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:foregroundGravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toEndOf="@+id/buttonFilter"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:srcCompat="@drawable/sort_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
